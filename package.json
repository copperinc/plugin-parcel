{
  "name": "@copper/plugin-parcel",
  "version": "1.1.1",
  "description": "Architect serverless framework (arc.codes) plugin to bundle functions with parcel",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "test:unit": "jasmine --config=test/jasmine.json",
    "test": "npm run lint && npm run test:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/copperinc/plugin-parcel.git"
  },
  "keywords": [
    "serverless",
    "architect",
    "plugin",
    "parcel"
  ],
  "author": "Tobias Schneider <schneider@jancona.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/copperinc/plugin-parcel/issues"
  },
  "homepage": "https://github.com/copperinc/plugin-parcel#readme",
  "devDependencies": {
    "@architect/eslint-config": "^1.0.0",
    "@architect/inventory": "^1.3.2",
    "@architect/package": "^6.2.0",
    "@architect/parser": "^2.1.3",
    "eslint": "^7.19.0",
    "jasmine": "^3.6.4"
  },
  "dependencies": {
    "@architect/utils": "^1.5.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "parcel-bundler": "1.12.3"
  },
  "eslintConfig": {
    "extends": "@architect/eslint-config",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
